{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist", 
    "rootDir": "./server",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false, 
    "skipLibCheck": true
  },
  "include": ["./server/**/*.ts"],
  "exclude": ["node_modules"]
}
